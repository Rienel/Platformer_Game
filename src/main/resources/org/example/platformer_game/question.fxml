<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.platformer_game.QuestionController">
    <Label fx:id="textQuestion" />
    <TextField fx:id="fieldAnswer" />
    <Label fx:id="answerBox" visible="false" />
    <Label fx:id="hintBox" visible="false" />
    <Button text="Submit" onAction="#handleSubmit" />
    <Button text="Hint" onAction="#handleHint" />
</VBox>
