<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.platformer_game.GameController">
   <children>
      <ImageView fitHeight="720.0" fitWidth="1280.0" layoutX="1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Images/temp-background.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="tfUsername" layoutX="110.0" layoutY="123.0" promptText="Username">
         <font>
            <Font name="Bodoni MT" size="15.0" />
         </font></TextField>
      <TextField fx:id="tfPassword" layoutX="110.0" layoutY="168.0" promptText="Password">
         <font>
            <Font name="Bodoni MT" size="15.0" />
         </font></TextField>
      <Button fx:id="btnLogIn" layoutX="237.0" layoutY="218.0" mnemonicParsing="false" onAction="#onLogIn" style="-fx-background-color: black;" styleClass="text" text="Log In" textFill="WHITE">
         <font>
            <Font name="Bodoni MT" size="15.0" />
         </font></Button>
      <Hyperlink fx:id="hlregister" layoutX="240.0" layoutY="261.0" onAction="#onRegisterAcc" text="Register" wrapText="true">
         <font>
            <Font name="Bodoni MT" size="15.0" />
         </font></Hyperlink>
      <Label layoutX="110.0" layoutY="266.0" text="Don't have an account?" />
      <ImageView fitHeight="588.0" fitWidth="480.0" layoutX="796.0" layoutY="66.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Images/leaderboard.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
