         <ImageView fitHeight="78.0" fitWidth="284.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../btnLeaderboard.png" />
            </image>
         </ImageView>
      </graphic></Button>
   <Button fx:id="btnQuit" layoutX="552.0" layoutY="425.0" mnemonicParsing="false" onAction="#onQuit" styleClass="custom-button" stylesheets="@../../../style.css">
